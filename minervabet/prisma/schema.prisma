generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  points BigInt
  bets Bet[]
  currentGameBet CurrentGameBet[]
  createdAt DateTime @default(now())
}

model Bet {
  id String @id @default(uuid())
  points BigInt
  killBet String
  assistBet String
  deathBet String
  resultBet Boolean
  result Boolean
  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId String
  createdAt DateTime @default(now())
}

model CurrentGameBet {
  id Int @id @default(autoincrement())
  points BigInt
  user Users @relation(fields: [userId], references: [id], onDelete: NoAction)
  userId String
  game Game @relation(fields: [gameId], references: [id], onDelete: NoAction)
  gameId String
  killBet String
  assistBet String
  deathBet String
  resultBet Boolean
  createdAt DateTime @default(now())
}

model Game {
  id String @id
  firstKill Boolean
  firstTower Boolean
  firstDragon Boolean
  atakhanKill Boolean
  dragonSoul Boolean
  qtGrubs Int
  result Boolean
  bets Bet[]
  currentGameBet CurrentGameBet[]
  participants GameParticipant[]
  minervaGame MinervaGame?
  createdAt DateTime @default(now())
}

model GameParticipant {
  puuid String @id
  username String
  tagline String
  championName String
  primaryRune RunePath
  secondaryRune RunePath
  team GameTeam
  lane String
  spellD Spell
  spellF Spell
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId String
}

model MinervaGame {
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId String @id
  championName String
  kills Int
  deaths Int
  assists Int
  kda Float
  highestKillStreak KillStreak
}



enum RunePath {
  PRECISION
  DOMINATION
  SORCERY
  RESOLVE
  INSPIRATION
}

enum GameTeam {
  MINERVA
  ENEMY
}

enum Spell {
  HEAL
  GHOST
  BARRIER
  EXHAUST
  FLASH
  TELEPORT
  SMITE
  CLEANSE
  IGNITE
}

enum KillStreak {
  DOUBLE
  TRIPLE
  QUADRA
  PENTA
}