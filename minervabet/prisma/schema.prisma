generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  points Int
  bets Bet[]
  createdAt DateTime @default(now())
}

model Bet {
  id String @id @default(uuid())
  status BetStatus @default(IN_PROGRESS)
  betPoints Int
  receivedPoints Int?
  pastUserPoints Int?
  newUserPoints Int?
  killBet String
  assistBet String
  deathBet String
  resultBet String
  result Boolean?
  totalMultipliers Float
  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  gameId String
  createdAt DateTime @default(now())
}

model MinervaGame {
  gameId String @id
  championName String
  kills Int
  deaths Int
  assists Int
  kda Float
  highestKillStreak Int
  date DateTime @default(now())
}

enum BetStatus {
  IN_PROGRESS
  FINALIZED
}