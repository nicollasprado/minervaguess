generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  points BigInt
  bets Bet[]
  currentGameBet CurrentGameBet[]
  createdAt DateTime @default(now())
}

model Bet {
  id String @id @default(uuid())
  points BigInt
  killBet String
  assistBet String
  deathBet String
  resultBet String
  result Boolean
  totalMultipliers Float
  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  gameId String
  createdAt DateTime @default(now())
}

model CurrentGameBet {
  id Int @id @default(autoincrement())
  points BigInt
  user Users @relation(fields: [userId], references: [id], onDelete: NoAction)
  userId String
  gameId String
  killBet String
  assistBet String
  deathBet String
  resultBet String
  totalMultipliers Float
  createdAt DateTime @default(now())
}

model MinervaGame {
  gameId String @id
  championName String
  kills Int
  deaths Int
  assists Int
  kda Float
  highestKillStreak KillStreak
}

enum KillStreak {
  DOUBLE
  TRIPLE
  QUADRA
  PENTA
}